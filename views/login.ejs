<!doctype html>

<html lang="en">

<head>

    <meta charset="UTF-8">

    <title>Login</title>

    <!-- <link rel="stylesheet" href="../public/assets/style.css" type="text/css"> -->

    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"> -->
</head>

<body>
    <div class="signin">
        <div class="content">
            

            <h2>Sign In</h2>
            <% if (error) { %>
                <p style="color: red;">
                    <%= error %>
                </p>
                <% } %>
                    <form action="/user/login" method="POST">
                        <div class="form">
                            <div class="inputBox">

                                <input type="text" id="username" name="userName" required> <i>Username</i>
                            </div>
                            <div class="inputBox">
                                <input type="password" id="password" name="userPassword" required> <i>Password</i>
                            </div>
                            <div class="links"> <a href="#">Forgot Password</a> <a href="#">Signup</a>
                            </div>
                            <div class="inputBox">
                                <input type="submit" value="登入">
                            </div>
                        </div>
                    </form>
        </div>
    </div>
</body>

</html>